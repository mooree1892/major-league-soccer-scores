<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
{{outlet}}


{{#each model as |match|}}
	<div id="games" class="panel panel-default">
		<h6 style="text-align: right">{{match.Game.Clock}}</h6>
		<h6 style="text-align: right">{{match.Game.DateTime}}</h6>
	 	<h5 style="text-align: left">{{match.Game.HomeTeamName}}	
	 		<span style="float: right">
	 			{{match.Game.HomeTeamScore}}
	 		</span>
	 	</h5>
	 	<h5 style="text-align: left">{{match.Game.AwayTeamName}}	
	 		<span style="float: right">
	 			{{match.Game.AwayTeamScore}}
	 		</span>
	 	</h5>

		<button type="button" class="btn btn-info" data-toggle="collapse" data-target="#{{match.Game.GameId}}">Match Details</button>
			<div id="{{match.Game.GameId}}" class="collapse">
				Goals
				{{#each match.Goals as |goal|}}
					<h5>{{goal.GameMinute}}</h5>
					<h5>{{goal.Name}}</h5>
				{{/each}}
				
				Disciplinary
				{{#each match.Bookings as |booking|}}
					<h5>{{booking.GameMinute}}</h5>
					<h5>{{booking.Type}}</h5>
					<h5>{{booking.Name}}</h5>
				{{/each}}
			</div>
	</div>
{{/each}}
